<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/textview_bg"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:elevation="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_type"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/timer_icon"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Low Power Mode"
        android:textSize="18sp"
        android:textColor="?android:textColor"
        android:fontFamily="@font/roboto_medium"
        android:layout_toEndOf="@+id/iv_type"
        android:layout_marginStart="10dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_eg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eg: When low power mode turned off"
        android:fontFamily="@font/roboto_medium"
        android:layout_toEndOf="@+id/iv_type"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/iv_expand"
        android:alpha="0.5"
        android:layout_below="@+id/tv_type"
        android:layout_marginStart="10dp"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:alpha="0.3"
        app:srcCompat="@drawable/arrow_forward_icon"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>